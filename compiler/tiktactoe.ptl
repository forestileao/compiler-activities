    writeln("3 - Sair");
    writeln("");

    while playing
        write("Escolha uma opcao: ");
        read(option);

        if option == 1 then
            play_tic_tac_toe();

            if ask_new_game() then
                writeln("Preparando novo jogo...");
            else
                playing = false;
                writeln("Obrigado por jogar! Ate a proxima! ðŸ‘‹");
            end

        else
            if option == 2 then
                show_game_instructions();
            else
                if option == 3 then
                    playing = false;
                    writeln("Saindo do jogo... Ate logo! ðŸ‘‹");
                else
                    writeln("Opcao invalida! Tente novamente.");
                end
            end
        end

        writeln("");
    end

    return 0;
end

